@model MVCCrud.Models.CommonModelClass
<!-- Used model class instead of `ProductsInfo` class-->
@{
    ViewData["Title"] = "GetProductsDataPartialView";
}


<div class="row">
    <div class="col-md-4">
        <form id="newProductForm"> <!-- Removed `asp-action` from the form and added `id`. -->
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="prodObj.ProdName" class="control-label"></label>
                <input asp-for="prodObj.ProdName" id="prodName" class="form-control"/> <!-- Here I have created `id` for fetch the data from the user input-->
                <span asp-validation-for="prodObj.ProdName" class="text-danger"></span>
            </div>

            @* <!-- No use for this code just created drop down using `prodListObj` of `CommonModelClass`-->
