                <label class="form-label">Dropdown</label>
            <select  class="form-control" asp-items="@(new SelectList(Model.prodListObj, "ProdId", "ProdName"))"> <!-- `ProdId` and `ProdName` are the fields in `ProductsInfo` Table where `ProdId` will be the value passed to database and `ProdName` will be shown in the user interface. -->
                    <option value="" selected disabled> Select Type</option>
                </select>
                <span asp-validation-for="prodObj.ProdName" class="text-danger"></span>
            </div> *@

            <div class="form-group">
                <label asp-for="prodObj.ProdQuantity" class="control-label"></label>
                <input asp-for="prodObj.ProdQuantity" class="form-control" />
                <span asp-validation-for="prodObj.ProdQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prodObj.ProdPrice" class="control-label"></label>
                <input asp-for="prodObj.ProdPrice" class="form-control" />
                <span asp-validation-for="prodObj.ProdPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" id="createButton" value="Create" class="btn btn-primary" /> 
                <!-- Changed input `type="button"` instead of `submit` and  also added `id` attribute with name-->
            </div>
        </form>
    </div>
</div>

@section Scripts { 
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
