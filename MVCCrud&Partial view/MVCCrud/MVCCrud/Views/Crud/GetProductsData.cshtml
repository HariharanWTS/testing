@model MVCCrud.Models.CommonModelClass
<!-- Used model class instead of `ProductsInfo` class-->

@{
    ViewData["Title"] = "GetProductsData";
}

<h1>GetProductsData</h1>

<h4>ProductsInfo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewProducts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="prodObj.ProdName" class="control-label"></label>
                <input asp-for="prodObj.ProdName" class="form-control" />
                <span asp-validation-for="prodObj.ProdName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prodObj.ProdQuantity" class="control-label"></label>
                <input asp-for="prodObj.ProdQuantity" class="form-control" />
                <span asp-validation-for="prodObj.ProdQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prodObj.ProdPrice" class="control-label"></label>
                <input asp-for="prodObj.ProdPrice" class="form-control" />
                <span asp-validation-for="prodObj.ProdPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductsDisplayData">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
